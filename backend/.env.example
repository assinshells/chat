# backend/.env.example

# Environment
NODE_ENV=development

# Server
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/chat

# CORS (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# JWT (REQUIRED - generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-use-crypto-random
JWT_EXPIRES_IN=15m

# Superadmin (optional, defaults to Admin@12345 if not set)
SUPERADMIN_PASSWORD=Admin@12345

# Frontend URL (for password reset links)
FRONTEND_URL=http://localhost:5173

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100